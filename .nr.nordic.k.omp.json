              "/home/nr/Workspaces/_analyst": "üá¶",
              "/home/nr/Workspaces/_client": "üá®"
            }
          }
        },
        {
          "type": "nx",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "#3B4252",
          "background": "#5E81AC",
          "template": " Óùì {{ .Full }} "
        },
        {
          "type": "angular",
          "style": "diamond",
          "foreground": "#5E81AC",
          "background": "#3B4252",
          "trailing_diamond": "",
          "template": " Óùì {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        },
        {
          "type": "node",
          "style": "diamond",
          "foreground": "#6CA35E",
          "background": "#3B4252",
          "leading_diamond": "",
          "trailing_diamond": "<#58647A, transparent>‚ñå</>",
          "template": " Óúò {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "properties": {
            "fetch_package_manager": true,
            "npm_icon": " <#cc3a3a>\ue5fa</> ",
            "yarn_icon": " <#348cba>Óöß</>"
          }
        },
        {
          "type": "ruby",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "<#58647A, transparent>ÓÇ∞</>",
          "foreground": "#BF616A",
          "background": "#3B4252",
          "template": " Óûë {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        },
        {
          "type": "python",
          "style": "diamond",
          "foreground": "#EBCB8B",
          "background": "#3B4252",
          "leading_diamond": "",
          "trailing_diamond": "<#58647A, transparent>ÓÇ∞</>",
          "template": " Óàµ {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "upgrade",
          "style": "diamond",
          "leading_diamond": " ",
          "trailing_diamond": " ",
          "foreground": "#434C5E",
          "background": "#EBCB8B"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#5E81AC",
          "templates": [
            " <#58647A, #434C5E>{{ .HEAD }}</>",
            "{{ if .Staging.Changed }} ",
            " <#4C566A, transparent>\ue0b6</>",
            "<#2e9599,#434C5E>",
            "{{ if .Staging.Untracked }} ü§° {{ .Staging.Untracked }}{{ end }}",
            "{{ if .Staging.Added }} ‚ûï {{ .Staging.Added }}{{ end }}",
            "{{ if .Staging.Deleted }} üí• <#BF616A, transparent>{{ .Staging.Deleted }}</>{{ end }}",
            "{{ if .Staging.Modified }} üß™{{ .Staging.Modified }}{{ end }}",
            " </>",
            "<#4C566A, transparent>\ue0b4</> ",
            "{{ end }}",
            "{{ if .Working.Changed }}",
            "{{ if .Working.Untracked }} ü§° <#D8DEE9, transparent>{{ .Working.Untracked }}</>{{ end }}",
            "{{ if .Working.Added }} ‚ûï <#5E81AC, transparent>{{ .Working.Added }}</>{{ end }}",
            "{{ if .Working.Deleted }} üí• <#BF616A, transparent>{{ .Working.Deleted }}</>{{ end }}",
            "{{ if .Working.Modified }} üß™<#2e9599, transparent>{{ .Working.Modified }}</>{{ end }}",
            "{{ if gt .StashCount 0 }} üíæ <#D8DEE9, transparent>{{ .StashCount }}</>{{ end }}",
            " {{ end }}"
          ],
          "properties": {
            "branch_icon": "üå≤",
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "trailing_diamond": "",
          "foreground": "#2e9599",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#BF616A{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " Ó¨¨ <background, transparent></>",
          "type": "status"
        }
      ],
      "newline": true
    }
  ]
}
