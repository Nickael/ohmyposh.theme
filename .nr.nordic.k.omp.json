          "foreground": "#D8DEE9",
          "leading_diamond": "",
          "templates": [
            "{{ if .Root }}<#D08770, transparent> \udb86\udc53 </>{{ end }}",
            "{{ if .SSHSession }}ÓÆ© {{ end }}",
            " {{ .UserName }} "
          ],
          "trailing_diamond": "<#58647A, transparent>‚ñå</>"
        },
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "<#4C566A, transparent>ÓÇ∞</>",
          "foreground": "#ECEFF4",
          "background": "#3B4252",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_icon": "\ue5fe",
            "folder_separator_icon": " <#4C566A, transparent>\ue0b1</> ",
            "home_icon": "üè†",
