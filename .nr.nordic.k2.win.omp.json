{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "console_title_template": "{{.Folder}}{{if .Root}} | root{{end}} - {{.Shell}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "docker",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "#ECEFF4",
          "background": "#ff8080",
          "template": " Ôåà {{ .Context }} "
        },
        {
          "type": "session",
          "style": "diamond",
          "background": "#4C566A",
          "foreground": "#D8DEE9",
          "leading_diamond": "",
          "templates": [
            "{{ if .Root }}<#D08770,#3B4252> \udb86\udc53 </>{{ end }}",
            "{{ if .SSHSession }} üëæ{{ end }}",
            " {{ .UserName }} "
          ],
          "trailing_diamond": "<#5E81AC, transparent>‚ñí</>"
        },
        {
          "type": "path",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "<#4C566A, transparent>ÓÇ∞</>",
          "foreground": "#ECEFF4",
          "background": "#3B4252",
          "template": " {{ .Path }} ",
          "properties": {
            "folder_icon": "\ue5fe",
            "folder_separator_icon": " <#4C566A, transparent>\ue0b1</> ",
            "home_icon": "üè†",
            "style": "mixed",
            "mapped_locations": {
              "/home/nr/Workspaces": "üëæ"
            }
          }
        },
        {
          "type": "ruby",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "<#58647A, transparent>ÓÇ∞</>",
          "foreground": "#BF616A",
          "background": "#3B4252",
          "template": " Óûë {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        },
        {
          "type": "python",
          "style": "diamond",
          "foreground": "#EBCB8B",
          "background": "#3B4252",
          "leading_diamond": "",
          "trailing_diamond": "<#58647A, transparent>ÓÇ∞</>",
          "template": " Óàµ {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "upgrade",
          "style": "plain",
          "template": " [ <#58647A,transparent>{{.Current}}</> -> <#A3BE8C,transparent>{{.Latest}}</> ] "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "foreground": "#5E81AC",
          "templates": [
            "<#2e9599,transparent>{{ .HEAD }}</>"
          ],
          "properties": {
            "branch_icon": "üå≤ ",
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "nx",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "#3B4252",
          "background": "#5E81AC",
          "template": " Óùì {{ .Full }} "
        },
        {
          "type": "angular",
          "style": "diamond",
          "foreground": "#5E81AC",
          "trailing_diamond": "",
          "template": " Óùì {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        },
        {
          "type": "node",
          "style": "diamond",
          "foreground": "#6CA35E",
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " Óúò {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "properties": {
            "fetch_package_manager": true,
            "npm_icon": " <#cc3a3a>\ue5fa</> ",
            "yarn_icon": " <#348cba>Óöß</>"
          }
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "trailing_diamond": "",
          "foreground": "#2e9599",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#BF616A{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " Ó¨¨ <background, transparent></>",
          "type": "status"
        }
      ],
      "newline": true
    }
  ]
}
